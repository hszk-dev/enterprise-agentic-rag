# =============================================================================
# Enterprise Agentic RAG Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# =============================================================================
# OpenAI
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Azure OpenAI (Optional - Fallback)
# =============================================================================
# AZURE_OPENAI_API_KEY=your-azure-api-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# =============================================================================
# Qdrant Vector Database
# =============================================================================
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-api-key  # For cloud/authenticated instances
QDRANT_COLLECTION_NAME=documents

# =============================================================================
# MinIO (S3 Compatible Object Storage)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=documents
MINIO_SECURE=false

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600
REDIS_SEMANTIC_CACHE_THRESHOLD=0.95

# =============================================================================
# PostgreSQL
# =============================================================================
DATABASE_URL=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag_db

# Docker Compose variables (used by docker-compose.yml)
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_DB=rag_db

# =============================================================================
# Langfuse (Observability)
# =============================================================================
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-your-public-key
LANGFUSE_SECRET_KEY=sk-your-secret-key
LANGFUSE_HOST=http://localhost:3000

# Langfuse self-hosted secrets (for docker-compose)
LANGFUSE_SECRET=mysecretkey
LANGFUSE_SALT=mysaltvalue

# =============================================================================
# Cohere (Re-ranking)
# =============================================================================
# COHERE_API_KEY=your-cohere-api-key

# =============================================================================
# RAG Configuration
# =============================================================================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K_RETRIEVAL=20
RAG_TOP_K_RERANK=5
RAG_HYBRID_SEARCH_ALPHA=0.5
